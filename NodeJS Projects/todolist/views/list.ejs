<%- include('header'); -%>

<div class="box" id="heading">
  <h1><%= listTitle %></h1>
</div>

<div class="box">
  <% Items.forEach(element => { %>
  <div class="item">
    <input type="checkbox" name="" id="" />
    <p><%= element %></p>
  </div>
  <% }) %>

  <form action="/" method="post" class="item">
    <input
      type="text"
      name="newItem"
      placeholder="New item"
      autocomplete="off"
    />
    <button type="submit" name="listBtn" value="<%= listTitle %>">+</button>
  </form>
</div>

<%- include('footer') -%>
